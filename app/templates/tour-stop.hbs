{{outlet}}
<div class="tour-stop">


		<nav class="tour-stop-nav">
			<div class="stop-nav-left">
				<div class="tour-home-button">
					{{#link-to 'tour' model.tour.slug}}<button>Home</button>{{/link-to}}
				</div>
				<div class="tour-title">
					<h1>{{model.tour.name}}</h1>
				</div>
				<div class="stop-name">
					<h1>{{model.name}}</h1>
				</div>
			</div>
			<div class="stop-nav-right">
				{{#if model.geospatial}}
				<button {{action "showDirections" model.lat model.lng model.park_lat model.park_lng}} class="map-preview">
					<img {{bind-attr src=model.map_image}}>
				</button>
				{{/if}}
			</div>
		</nav>


	<section>
		{{#if model.video_embed}}
			hello
		{{/if}}
		<div>
			{{!--<ul>
			{{# if model.images}}
				<li>{{#each image in model.images}}{{image.image}}{{/each}}</li>
			{{/if}}
			</ul>--}}
		</div>
		
		<article class="stop-article">{{{model.description}}}</article>

		{{#if model.geospatial}}
			<div class="stop-directions">
				{{partial "loading"}}
				<section>
					

					{{ember-selectize
						id="mode_select"
						content=model.direction_modes
						optionValuePath="content"
						optionLabelPath="content"
					}}
					<div class="geoservice-warning">
						<h2>Location Services Disabled</h2>
						<p>Sorry, we need to be able to access your location in order to display directions.</p>
					</div>
					<div class="map-canvas"></div>
					<div class="fallback">
						Approximate Address: <span class="address"></span>
						<span class="address-warn"></span>
					</div>
					<div id="directions"></div>
				</section>
			</div>
		{{/if}}

	</section>

	

	<nav class="stop-nav">
		<div class="previous-button">
			{{#if previous_stop}}
				{{#link-to 'tour_stop' model.previous_stop}}
					<button {{action "hideMap"}}>Previous</button>
				{{/link-to}}
			{{else}}
				&nbsp;
			{{/if}}
		</div>
		<div class="next-button">
			{{#if next_stop}}
				{{#link-to 'tour_stop' model.next_stop}}
					<button {{action "hideMap"}}>Next</button>
				{{/link-to}}
			{{else}}
				&nbsp;
			{{/if}}
		</div>
	</nav>
	
</div>