<nav class="top-nav">
	<a href="/"><div class="back">Back</div></a>
	<div class="tour-title"><h1>{{model.name}}</h1></div>
	<div class="menu">

		<div class="dropdown">
	 		<div class="dropdown-container">
	    		<p class="dropdown-button">Menu</p>
				<ul class="dropdown-menu dropdown-select">
					{{#each info in model.info_ids}}
	      				<li>{{info.name}}</li>
	      			{{/each}}
	    		</ul>
	  		</div>
		</div>

	</div>
</nav>


<div class="tour-detail">

{{#ivy-tabs}}
	{{#ivy-tab-panel}}
		<section class="stop-list">
			{{#each stop in model.stop_ids}}
				
					{{#if stop.intro}}
						<div class="stops">
						{{#link-to 'tour_stop' stop}}
							<div class="intro-link">
								<h2>{{stop.name}}</h2>
							</div>
							{{/link-to}}
						</div>

						<div class="stop-header">
							<h2>Tour Stops</h2>
						</div>

					{{else}}
						{{#link-to 'tour_stop' stop}}
						<div class="stops">
							<div class="thumbnail">
								{{#if geospatial}}
									<img {{bind-attr src=stop.map_image}}/>
								{{else}}
									{{#each image in stop.images}}
										<img {{bind-attr src=image.image_preview}}/>
									{{/each}}
								{{/if}}
							</div>
							<div class="stop-link">
								<h2>{{stop.position}}. {{stop.name}}</h2>
							</div>
						</div>
						{{/link-to}}
					{{/if}}
					
			{{/each}}
		</section>

		<section>{{outlet}}</section>

		{{!--
		<ul>
			{{#each info in model.info_ids}}
				<li>{{info.name}}</li>
			{{/each}}
		</ul>
		--}}
	{{/ivy-tab-panel}}

	{{#ivy-tab-panel}}
    	{{overview-map action="mapTour"}}
	{{/ivy-tab-panel}}

	<nav class="overview-nav">
		{{#ivy-tab-list}}
			<div>
	    		{{#ivy-tab}}Tour Stops{{/ivy-tab}}
	    	</div>
	    	<div>
	    		{{#ivy-tab}}Map OverView{{/ivy-tab}}
	    	</div>
		{{/ivy-tab-list}}
	</nav>

{{/ivy-tabs}}

</div>