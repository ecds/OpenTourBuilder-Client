<header class="centered-navigation" role="banner">
  <div class="centered-navigation-wrapper">
    <nav role="navigation">
      <ul id="js-centered-navigation-menu" class="centered-navigation-menu show">
        <li class="nav-link">{{#link-to 'index' }}Back{{/link-to}}</li>

        <li class="nav-link title">
          {{model.name}}
        </li>

        <li class="nav-link more"><a href="javascript:void(0)">Menu</a>
          <ul class="submenu">
            {{#each info in model.info_ids}}
            	<li>{{#link-to 'tour_info' info}}{{info.name}}{{/link-to}}</li>
            {{/each}}

          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>



<div class="tour-detail">

	<section class="stop-list">
		{{#each stop in model.stop_ids}}
			
				{{#if stop.intro}}
					<div class="stops">
					{{#link-to 'tour_stop' stop}}
						<div class="intro-link">
							<h2>{{stop.name}}</h2>
						</div>
						{{/link-to}}
					</div>

					<div class="stop-header">
						<h2>Tour Stops</h2>
					</div>

				{{else}}
					{{#link-to 'tour_stop' stop}}
					<div class="stops">
						<div class="thumbnail">
							{{#if geospatial}}
								<img {{bind-attr src=stop.map_image}}/>
							{{else}}
								{{#each image in stop.images}}
									<img {{bind-attr src=image.image_preview}}/>
								{{/each}}
							{{/if}}
						</div>
						<div class="stop-link">
							<h2>{{stop.position}}. {{stop.name}}</h2>
						</div>
					</div>
					{{/link-to}}
				{{/if}}
				
		{{/each}}
	</section>
	
	<div class="overview-map">
		{{overview-map}}
	</div>

	<nav class="tour-overview">
		{{toggle-list action="toggleList"}}
		{{toggle-map action="mapTour"}}
	</nav>
	<section>{{outlet}}</section>
</div>


