  </div> -->


{{else}}

<a class="fancybox" data-fancybox-type="iframe" href="/image/{{image.id}}">
  <picture>
    <source media="(min-width: 650px)" {{bind-attr srcset=image.desktop_thumb}} />

    <source media="(min-width: 465px)" {{bind-attr srcset=image.tablet_thumb}} />

    <img {{bind-attr src=image.phone_thumb}} />
  </picture>
</a>

